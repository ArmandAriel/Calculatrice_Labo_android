<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:weightSum="6"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/nomapp"
        android:layout_width="fill_parent"
        android:layout_height="27dp"
        android:layout_marginHorizontal="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"
        android:text="LABORATOIRE 1 - ARMAND OKEDJE"
        android:textStyle="bold"
        android:background="#83C9EA"
        android:gravity="center"
        android:padding="0dp"
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/screen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center|right"
        android:background="#F8F8FA"
        android:textStyle = "bold"
        android:textColor = "#000000"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="10dp"
        android:padding="20dp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="5">

        <Button
            android:id="@+id/ac"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="⬅"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:background="#F3F3F3"
            android:textColor="#000000"
            android:textSize="50dp" />

        <Button
            android:id="@+id/ce"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="CE"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="28dp"
            android:background="#F3F3F3"
            android:onClick="ButtonClick"/>

        <Button
            android:id="@+id/c"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="C"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="30dp"
            android:onClick="ButtonClick"
            android:background="#F3F3F3" />

        <Button
            android:id="@+id/plusmoins"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="+-"
            android:textColor="#000000"
            android:textSize="33dp"
            android:background="#F3F3F3"
            android:onClick="ButtonClick" />

        <Button
            android:id="@+id/carre"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#F3F3F3"
            android:onClick="ButtonClick"
            android:text="√"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="bold"
            app:srcCompat="@drawable/sign2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="5">

        <Button
            android:id="@+id/sept"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="7"
            android:onClick="ButtonClick"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="30dp"
            android:background="#F3F3F3" />
        <Button
            android:id="@+id/huit"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="8"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="30dp"
            android:onClick="ButtonClick"
            android:background="#F3F3F3" />

        <Button
            android:id="@+id/neuf"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="9"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="30dp"
            android:onClick="ButtonClick"
            android:background="#F3F3F3" />
        <Button
            android:id="@+id/div"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="/"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="38dp"
            android:background="#F3F3F3"
            android:onClick="ButtonClick"
            app:srcCompat = "@drawable/sign1"
            />
        <Button
            android:id="@+id/percent"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="%"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="35dp"
            android:onClick="ButtonClick"
            android:background="#F3F3F3"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="5">

        <Button
            android:id="@+id/quatre"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="4"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="30dp"
            android:onClick="ButtonClick"
            android:background="#F3F3F3" />
        <Button
            android:id="@+id/cinq"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="5"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="30dp"
            android:onClick="ButtonClick"
            android:background="#F3F3F3" />

        <Button
            android:id="@+id/six"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="6"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="30dp"
            android:onClick="ButtonClick"
            android:background="#F3F3F3" />
        <Button
            android:id="@+id/multi"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="*"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="38dp"
            android:onClick="ButtonClick"
            android:background="#F3F3F3"
            app:srcCompat = "@drawable/sign1"
            />
        <Button
            android:id="@+id/surX"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="1/x"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="20dp"
            android:onClick="ButtonClick"
            android:background="#F3F3F3"
            app:srcCompat = "@drawable/sign3"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="5">

        <Button
            android:id="@+id/un"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="1"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="30dp"
            android:onClick="ButtonClick"
            android:background="#F3F3F3" />
        <Button
            android:id="@+id/deux"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="2"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="30dp"
            android:onClick="ButtonClick"
            android:background="#F3F3F3" />

        <Button
            android:id="@+id/trois"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="3"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="30dp"
            android:onClick="ButtonClick"
            android:background="#F3F3F3" />
        <Button
            android:id="@+id/soust"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="-"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="38dp"
            android:onClick="ButtonClick"
            android:background="#F3F3F3"
            />
        <Button
            android:id="@+id/plus"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="+"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="38dp"
            android:onClick="ButtonClick"
            android:background="#F3F3F3"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/zero"
            android:layout_width="155dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#F3F3F3"
            android:text="0"
            android:textColor="#000000"
            android:textSize="30dp"
            android:onClick="ButtonClick"
            android:textStyle="bold" />

        <Button
            android:id="@+id/virgule"
            android:layout_width="72dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#F3F3F3"
            android:text="."
            android:textColor="#000000"
            android:textSize="30dp"
            android:onClick="ButtonClick"
            android:textStyle="bold" />

        <Button
            android:id="@+id/equal"
            android:layout_width="153dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#F3F3F3"
            android:text="="
            android:textColor="#000000"
            android:textSize="50dp"
            android:onClick="ButtonClick"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>